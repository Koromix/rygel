    "windows": {
        "name": "Windows",

        "qemu": {
            "binary": "qemu-system-x86_64",
            "arguments": ["-m", "3G", "-smp", 4, "-rtc", "clock=host,base=localtime", "-bios", "bios.bin", "-hda", "disk.qcow2", "-netdev", "user,id=mynet,hostfwd=tcp::22205-:22", "-device", "e1000,netdev=mynet", "-vga", "qxl", "-device", "qemu-xhci", "-device", "usb-tablet"]
        },

        "info": {
            "version": 4,
            "platform": "win32",
            "arch": "x64",

            "port": 22205,
            "username": "windows",
            "password": "windows",

            "shutdown": "shutdown -s -t 0"
        },

        "uploads": {
            "node32.cmd": "C:/Node32/node32.cmd",
            "node64.cmd": "C:/Node64/node64.cmd"
        },

        "tests": {
            "Windows i386": {
                "directory": "C:/Users/windows/Desktop/luigi32",
                "build": "C:\\Node32\\node32.cmd npm install --production",
                "commands": {
                    "Test Raylib": "seatsh C:\\Node32\\node32.cmd node test/tests/raylib.js"
                }
            },

            "Windows x64": {
                "directory": "C:/Users/windows/Desktop/luigi64",
