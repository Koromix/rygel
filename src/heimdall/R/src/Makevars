include Makevars.inc

PKG_LIBS += -lGL -lX11

override OBJECTS := $(OBJECTS)\
                    $(addprefix ./${R_ARCH}_, glfw.c.o)

./${R_ARCH}_glfw.c.o: ../glfw.c
	$(CC) $(ALL_CPPFLAGS) $(ALL_CFLAGS) -c -o $@ $<
