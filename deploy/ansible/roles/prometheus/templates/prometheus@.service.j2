[Unit]
Description = Prometheus %i
Documentation = https://prometheus.io/

[Service]
Type = simple
User = prometheus
Group = prometheus
ExecStart = {{ prometheus_root_path }}/%i
WorkingDirectory = {{ prometheus_root_path }}
Restart = on-failure
RestartSec = 20
TimeoutStopSec = 30

[Install]
WantedBy = multi-user.target
