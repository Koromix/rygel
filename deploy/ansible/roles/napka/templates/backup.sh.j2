cd "{{ napka_root_path }}/databases"

TIME=$(date +%Y%m%d_%H%M%S)
mkdir "$TIME"

find . -maxdepth 1 -name "*.db" -exec sqlite3 "{}" ".backup '$TIME/{}'" \;

tar cf "../backups/$TIME.tar" "$TIME"
ls -1 ../backups/* | sort -r | tail -n +6 | xargs rm -f

rm -rf "$TIME"
