{% for remote in rclone_remotes %}
[remote_{{ loop.index }}]
{% if remote.type == 'sftp' %}
type = sftp
host = {{ remote.host }}
user = {{ remote.user }}
key_pem = {{ remote.key | replace('\n', '\\n') }}
{% endif %}

{% set outer = loop %}

{% for dir in rclone_directories %}
[crypt_{{ outer.index }}_{{ loop.index }}]
type = crypt
remote = remote_{{ outer.index }}:{{ dir.dest }}
filename_encryption = {{ 'standard' if rclone_secure_file_names else 'off' }}
directory_name_encryption = {{ 'true' if rclone_secure_directory_names else 'false' }}
password = {{ rclone_key }}
{% endfor %}

{% endfor %}
