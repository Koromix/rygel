[Unit]
Description = Perform rclone backups
Wants = network-online.target
After = network-online.target

[Service]
Type = oneshot
{% for dir in rclone_directories %}
{% set outer = loop %}
{% for remote in rclone_remotes %}
ExecStart = rclone sync --config "{{ rclone_root_path }}/rclone.cfg" "{{ dir.src }}" "crypt_{{ loop.index }}_{{ outer.index }}:"
{% endfor %}
{% endfor %}
